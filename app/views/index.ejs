<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500">
        <p class="text-xs font-bold text-gray-400 uppercase">Pemasukan</p>
        <h2 class="text-2xl font-bold text-gray-800">Rp <%= totalPemasukan.toLocaleString('id-ID') %></h2>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-red-500">
        <p class="text-xs font-bold text-gray-400 uppercase">Pengeluaran</p>
        <h2 class="text-2xl font-bold text-gray-800">Rp <%= totalPengeluaran.toLocaleString('id-ID') %></h2>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-500">
        <p class="text-xs font-bold text-gray-400 uppercase">Saldo</p>
        <h2 class="text-2xl font-bold text-gray-800">Rp <%= (totalPemasukan - totalPengeluaran).toLocaleString('id-ID') %></h2>
    </div>
</div>

<div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100">
    <div class="p-5 border-b bg-gray-50">
        <h3 class="font-bold text-lg text-gray-700">Riwayat Transaksi</h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead class="bg-white text-gray-500 uppercase text-xs border-b">
                <tr>
                    <th class="p-4">Tanggal</th>
                    <th class="p-4">Ket</th>
                    <th class="p-4">Jenis</th>
                    <th class="p-4 text-right">Nominal</th>
                    <th class="p-4 text-center">Bukti</th>
                    <th class="p-4 text-center">Aksi</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% transaksi.forEach(item => { %>
                <tr class="hover:bg-gray-50 transition">
                    <td class="p-4 text-sm"><%= item.tanggal %></td>
                    <td class="p-4 font-medium"><%= item.keterangan %></td>
                    <td class="p-4">
                        <span class="px-2 py-1 rounded text-xs font-bold <%= item.jenis === 'Pemasukan' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                            <%= item.jenis %>
                        </span>
                    </td>
                    <td class="p-4 text-right font-mono font-bold">
                        Rp <%= item.nominal.toLocaleString('id-ID') %>
                    </td>
                    <td class="p-4 text-center">
                        <% if(item.foto) { %>
                            <a href="/uploads/<%= item.foto %>" target="_blank" class="text-blue-500 underline text-xs">Lihat</a>
                        <% } else { %>
                            <span class="text-gray-300 text-xs">-</span>
                        <% } %>
                    </td>
                    <td class="p-4 text-center">
                        <form action="/transaksi/delete/<%= item.id %>" method="POST" onsubmit="return confirm('Hapus?')">
                            <button class="text-red-500 hover:text-red-700 text-sm">Hapus</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>