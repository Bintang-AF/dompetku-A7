<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-blue-600">DompetKu</h2>
            <p class="text-gray-500">Silakan masuk ke akun Anda</p>
        </div>

        <form action="/auth/login" method="POST">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-600 mb-1">Username / Email</label>
                    <input type="text" name="identifier" required 
                        class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition"
                        placeholder="Masukkan username atau email">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-600 mb-1">Password</label>
                    <input type="password" name="password" required 
                        class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition"
                        placeholder="••••••••">
                </div>

                <button type="submit" 
                    class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-md">
                    Masuk Sekarang
                </button>
            </div>
        </form>

        <div class="mt-6 text-center text-sm text-gray-600">
            Belum punya akun? 
            <a href="/auth/register" class="text-blue-600 font-bold hover:underline">Daftar di sini</a>
        </div>
    </div>
</div>