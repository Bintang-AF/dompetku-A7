<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md border border-gray-100">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800"><%= isEdit ? 'Edit' : 'Tambah' %> Transaksi</h2>
        <a href="/" class="text-gray-500 hover:text-gray-700 text-sm">‚Üê Kembali</a>
    </div>
    
    <form action="<%= isEdit ? '/transaksi/simpan' : '/transaksi/simpan' %>" method="POST">
        <div class="grid grid-cols-1 gap-5">
            <div>
                <label class="block text-sm font-semibold text-gray-600 mb-2">Tanggal</label>
                <input type="date" name="tanggal" value="<%= isEdit ? data.tanggal : '' %>" required 
                class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-600 mb-2">Jenis Transaksi</label>
                <div class="flex gap-4">
                    <label class="flex items-center space-x-2 border p-3 rounded-lg w-full cursor-pointer hover:bg-gray-50 <%= isEdit && data.jenis == 'Pemasukan' ? 'ring-2 ring-green-500' : '' %>">
                        <input type="radio" name="jenis" value="Pemasukan" <%= isEdit && data.jenis == 'Pemasukan' ? 'checked' : '' %> required>
                        <span class="text-green-600 font-bold">Pemasukan</span>
                    </label>
                    <label class="flex items-center space-x-2 border p-3 rounded-lg w-full cursor-pointer hover:bg-gray-50 <%= isEdit && data.jenis == 'Pengeluaran' ? 'ring-2 ring-red-500' : '' %>">
                        <input type="radio" name="jenis" value="Pengeluaran" <%= isEdit && data.jenis == 'Pengeluaran' ? 'checked' : '' %>>
                        <span class="text-red-600 font-bold">Pengeluaran</span>
                    </label>
                </div>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-600 mb-2">Nominal (Rp)</label>
                <input type="number" name="nominal" placeholder="0" value="<%= isEdit ? data.nominal : '' %>" required
                class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-600 mb-2">Keterangan</label>
                <textarea name="keterangan" rows="3" placeholder="Contoh: Makan Siang" required class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition"><%= isEdit ? data.keterangan : '' %></textarea>
            </div>

            <button type="submit" class="mt-4 w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-lg transform active:scale-95">
                <%= isEdit ? 'Simpan Perubahan' : 'Simpan Transaksi' %>
            </button>
        </div>
    </form>
</div>