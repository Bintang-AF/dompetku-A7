<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md border border-gray-100">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800"><%= isEdit ? 'Edit' : 'Tambah' %> Transaksi</h2>
        <a href="/" class="text-gray-500 hover:text-blue-600 text-sm font-medium">‚Üê Kembali</a>
    </div>

    <form action="<%= isEdit ? '/transaksi/update/' + data.id : '/transaksi/simpan' %>" method="POST" enctype="multipart/form-data">
        
        <div class="grid grid-cols-1 gap-5">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Tanggal</label>
                <input type="date" name="tanggal" value="<%= isEdit ? data.tanggal : '' %>" required 
                    class="w-full border p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Jenis</label>
                <select name="jenis" class="w-full border p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    <option value="Pemasukan" <%= isEdit && data.jenis == 'Pemasukan' ? 'selected' : '' %>>Pemasukan (+)</option>
                    <option value="Pengeluaran" <%= isEdit && data.jenis == 'Pengeluaran' ? 'selected' : '' %>>Pengeluaran (-)</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Nominal (Rp)</label>
                <input type="number" name="nominal" placeholder="0" value="<%= isEdit ? data.nominal : '' %>" required
                    class="w-full border p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Keterangan</label>
                <textarea name="keterangan" rows="2" required class="w-full border p-3 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"><%= isEdit ? data.keterangan : '' %></textarea>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Bukti Foto / Struk</label>
                <% if(isEdit && data.foto) { %>
                    <p class="text-xs text-green-600 mb-1">Foto saat ini: <%= data.foto %> (Upload baru untuk mengganti)</p>
                <% } %>
                <input type="file" name="bukti_foto" class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"/>
            </div>

            <button type="submit" class="mt-4 w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-lg">
                <%= isEdit ? 'Update Perubahan' : 'Simpan Transaksi' %>
            </button>
        </div>
    </form>
</div>